const { assert, expect } = require('chai')

import @{}
  encode_ecc_public_spki
  encode_ecc_public_raw
  encode_ecc_private_pkcs8

  decode_ecc_public_spki
  decode_ecc_public_raw
  decode_ecc_private_pkcs8

  encode_ecc_jwk
  encode_ecc_public_jwk
  encode_ecc_private_jwk
  decode_ecc_jwk
  decode_ecc_public_jwk
  decode_ecc_private_jwk
from 'ecc-codec/esm/index.mjs'


const umd_or_module = require('ecc-codec')

describe @ 'smoke', @::
  it @ 'esm basic', @::
    assert.equal @ 'function', typeof encode_ecc_public_spki
    assert.equal @ 'function', typeof encode_ecc_public_raw
    assert.equal @ 'function', typeof encode_ecc_private_pkcs8

    assert.equal @ 'function', typeof decode_ecc_public_spki
    assert.equal @ 'function', typeof decode_ecc_public_raw
    assert.equal @ 'function', typeof decode_ecc_private_pkcs8

    assert.equal @ 'function', typeof encode_ecc_jwk
    assert.equal @ 'function', typeof encode_ecc_public_jwk
    assert.equal @ 'function', typeof encode_ecc_private_jwk
    assert.equal @ 'function', typeof decode_ecc_jwk
    assert.equal @ 'function', typeof decode_ecc_public_jwk
    assert.equal @ 'function', typeof decode_ecc_private_jwk

  it @ 'commonjs / web', @::
    assert.equal @ 'function', typeof umd_or_module.encode_ecc_public_spki
    assert.equal @ 'function', typeof umd_or_module.encode_ecc_public_raw
    assert.equal @ 'function', typeof umd_or_module.encode_ecc_private_pkcs8

    assert.equal @ 'function', typeof umd_or_module.decode_ecc_public_spki
    assert.equal @ 'function', typeof umd_or_module.decode_ecc_public_raw
    assert.equal @ 'function', typeof umd_or_module.decode_ecc_private_pkcs8

    assert.equal @ 'function', typeof umd_or_module.encode_ecc_jwk
    assert.equal @ 'function', typeof umd_or_module.encode_ecc_public_jwk
    assert.equal @ 'function', typeof umd_or_module.encode_ecc_private_jwk
    assert.equal @ 'function', typeof umd_or_module.decode_ecc_jwk
    assert.equal @ 'function', typeof umd_or_module.decode_ecc_public_jwk
    assert.equal @ 'function', typeof umd_or_module.decode_ecc_private_jwk

